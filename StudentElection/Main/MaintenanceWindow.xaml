                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#49000000"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button x:Name="btnAddVoter" Content="ADD VOTER" DockPanel.Dock="Right" FontWeight="Bold" Margin="0,2" BorderBrush="{x:Null}" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" Click="btnAddVoter_Click">
                                                <Button.Style>
                                                    <Style TargetType="{x:Type Button}">
                                                        <Setter Property="Background" Value="#19000000"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="{x:Type Button}">
                                                                    <Border Background="{TemplateBinding Background}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,5" />
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#49000000"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button x:Name="btnImportVoters" Content="IMPORT VOTERS" DockPanel.Dock="Right" FontWeight="Bold" Margin="4,2" BorderBrush="{x:Null}" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12" Click="btnImportVoters_Click">
                                                <Button.Style>
                                                    <Style TargetType="{x:Type Button}">
                                                        <Setter Property="Background" Value="#19000000"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="{x:Type Button}">
                                                                    <Border Background="{TemplateBinding Background}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,5" />
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#49000000"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </DockPanel>
                                        <DockPanel DockPanel.Dock="Top">
                                            <Label HorizontalAlignment="Left"  Content="Voters" FontWeight="Bold" FontSize="18"  />
                                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right" Visibility="Visible">
                                                <CheckBox x:Name="chkVoted" DockPanel.Dock="Right" Content="Show voted only" HorizontalAlignment="Right"  VerticalAlignment="Center" VerticalContentAlignment="Center" Visibility="Visible" Margin="4,0" Foreground="#dd000000" Click="chkVoted_Click"/>
                                                <Label Content="Search" VerticalAlignment="Center" />
                                                <TextBox x:Name="txtVoterFilter" Width="120" VerticalContentAlignment="Center" Height="24" MaxLines="1" MaxLength="20" TextChanged="txtVoterFilter_TextChanged" />
                                            </StackPanel>
                                        </DockPanel>
                                        <syncfusion:SfDataGrid x:Name="dgVoters"
                                                               Background="White"
                                                               ColumnSizer="AutoLastColumnFill"
                                                               AllowFiltering="False"
                                                               AllowTriStateSorting="True"
                                                               AllowGrouping="True"
                                                               AutoGenerateColumns="False"
                                                               NavigationMode="Row"
                                                               SelectionUnit="Row"
                                                               SelectionMode="Single"
                                                               ScrollMode="Async"
                                                               AllowResizingColumns="True"
                                                               ItemsSource="{Binding ElementName=dataPagerVoters, Path=PagedSource}"
                                                               SelectionChanged="dgVoters_SelectionChanged">
                                            <syncfusion:SfDataGrid.RowStyle>
                                                <Style TargetType="syncfusion:VirtualizingCellsControl">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsVoted}" Value="True">
                                                            <Setter Property="Foreground" Value="#FF009966" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </syncfusion:SfDataGrid.RowStyle>
                                            <syncfusion:SfDataGrid.TableSummaryRowStyle>
                                                <Style TargetType="syncfusion:TableSummaryRowControl">
                                                    <Setter Property="Background" Value="WhiteSmoke"/>
                                                </Style>
                                            </syncfusion:SfDataGrid.TableSummaryRowStyle>
                                            <syncfusion:SfDataGrid.TableSummaryRows>
                                                <syncfusion:GridTableSummaryRow Title="Number of voters: {VoterCount}" ShowSummaryInRow="True" >
                                                    <syncfusion:GridSummaryRow.SummaryColumns>
                                                        <syncfusion:GridSummaryColumn Name="VoterCount"
                                                                                  Format="'{Count:d}'"
                                                                                  MappingName="Vin"
                                                                                  SummaryType="CountAggregate" />
                                                    </syncfusion:GridSummaryRow.SummaryColumns>
                                                </syncfusion:GridTableSummaryRow>
                                            </syncfusion:SfDataGrid.TableSummaryRows>
                                            <syncfusion:SfDataGrid.Columns>
                                                <syncfusion:GridTextColumn HeaderText="Voter ID" MappingName="Vin" MinimumWidth="90"/>
                                                <syncfusion:GridTextColumn HeaderText="Name" MappingName="FullName" MinimumWidth="200" ColumnSizer="AutoLastColumnFill"/>
                                                <syncfusion:GridNumericColumn HeaderText="Year Level" MappingName="YearLevel" NumberDecimalDigits="0" TextAlignment="Center" MinimumWidth="100"/>
                                                <syncfusion:GridTextColumn HeaderText="Section" MappingName="Section" MinimumWidth="120"/>
                                                <syncfusion:GridTextColumn HeaderText="Sex" MappingName="Sex" TextAlignment="Center" MinimumWidth="80"/>
                                                <syncfusion:GridDateTimeColumn HeaderText="Birthdate" MappingName="Birthdate" AllowNullValue="True" TextAlignment="Center" MinimumWidth="120" Pattern="CustomPattern" CustomPattern="yyyy-MM-dd"/>
                                                <syncfusion:GridCheckBoxColumn HeaderText="Is Voted?" MappingName="IsVoted" TextAlignment="Center" IsHidden="True"/>
                                            </syncfusion:SfDataGrid.Columns>
                                        </syncfusion:SfDataGrid>
                                    </DockPanel>
                                </Grid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
                <Border x:Name="bdrLoadingMaintenance" Background="White" Visibility="Hidden">
                    <syncfusion:ProgressRing x:Name="prgMaintenance" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Please wait..." FontSize="20"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
