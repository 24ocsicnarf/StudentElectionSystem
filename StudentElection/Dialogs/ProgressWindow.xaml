<Window x:Class="StudentElection.Dialogs.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentElection.Dialogs"
        mc:Ignorable="d" FontFamily="Tahoma" FontSize="14"
        Title="" Height="120" Width="240" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None" IsTabStop="False">
    <Grid>
        <Grid Margin="16">
            <StackPanel VerticalAlignment="Center">
                <TextBlock x:Name="tbkMessage" Text="Please wait..." DockPanel.Dock="Top" Foreground="Black" HorizontalAlignment="Center" Padding="8"/>
                <ProgressBar x:Name="progressBar"  Height="24" />
                <Button x:Name="btnCancel" Content="CANCEL" VerticalAlignment="Center" FontSize="12" HorizontalAlignment="Center" Margin="8" Padding="12 2"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
