<Window x:Class="StudentElection.Dialogs.StaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentElection.Dialogs"
        mc:Ignorable="d"
        Title="StaffWindow" Height="290" Width="360" Margin="0" WindowStyle="None" WindowStartupLocation="CenterOwner" FontFamily="Tahoma" FontSize="14.667" ResizeMode="NoResize"  ShowInTaskbar="False" Loaded="Window_Loaded" PreviewKeyUp="Window_PreviewKeyUp">
    <Grid Background="#FFFFFFFF">
        <DockPanel Margin="4">
            <StackPanel DockPanel.Dock="Top"  Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <StackPanel>
                    <Label x:Name="lblTitle" DockPanel.Dock="Left" Content="Create Staff" FontWeight="Bold" FontSize="18" Foreground="#FF1B205E" />
                    <DockPanel>
                        <Label DockPanel.Dock="Left" Content="PERSONAL INFO" FontWeight="Bold" FontSize="12" />
                    </DockPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Label Content="Last Name*" Grid.Column="0" HorizontalAlignment="Left" FontSize="12" />
                        <TextBox x:Name="txtLastName" Grid.Column="1" TextWrapping="Wrap" HorizontalAlignment="Stretch" Margin="2,2" FontSize="14.667" MaxLength="255" MaxLines="1"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Label Content="First Name*" Grid.Column="0" HorizontalAlignment="Left" FontSize="12" />
                        <TextBox x:Name="txtFirstName" Grid.Column="1" TextWrapping="Wrap" HorizontalAlignment="Stretch" Margin="2,2" FontSize="14.667" MaxLength="255" MaxLines="1"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Label Content="Middle Name" Grid.Column="0" HorizontalAlignment="Left" FontSize="12" />
                        <TextBox x:Name="txtMiddleName" Grid.Column="1" TextWrapping="Wrap" HorizontalAlignment="Stretch" Margin="2,2" FontSize="14.667" MaxLength="255" MaxLines="1"/>
                    </Grid>
                    <Separator Opacity="0" />
                    <DockPanel>
                        <Label DockPanel.Dock="Left" Content="ACCOUNT" FontWeight="Bold" FontSize="12" />
                    </DockPanel>
                    <Grid Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Label Content="Type" Grid.Column="0" HorizontalAlignment="Left" FontSize="12" />
                        <StackPanel  Grid.Column="1" Orientation="Horizontal">
                            <RadioButton x:Name="radAdmin" Content="Admin" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,0" IsChecked="True" />
                            <RadioButton x:Name="radSuperAdmin" Content="Super Admin" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,0" IsEnabled="False" />
                        </StackPanel>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Label Content="Username*" Grid.Column="0" HorizontalAlignment="Left" FontSize="12" />
                        <TextBox x:Name="txtUsername" Grid.Column="1" TextWrapping="Wrap" HorizontalAlignment="Stretch" Margin="2,2" FontSize="14.667" MaxLength="255" MaxLines="1"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Label Content="Password*" Grid.Column="0" HorizontalAlignment="Left" FontSize="12" />
                        <Grid Grid.Column="1" HorizontalAlignment="Right" Width="264" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="28" />
                            </Grid.ColumnDefinitions>
                            <Grid  Grid.Column="0">
                                <PasswordBox x:Name="pwdStaff" HorizontalAlignment="Stretch" Margin="2,2" FontSize="14.667" MaxLength="255" GotFocus="pwdStaff_GotFocus" LostFocus="pwdStaff_LostFocus" PreviewKeyDown="pwdStaff_PreviewKeyDown" />
                                <TextBox x:Name="txtPassword" HorizontalAlignment="Stretch" Margin="2,2" FontSize="14.667" MaxLength="255" Visibility="Collapsed" />
                            </Grid>
                            <Button Grid.Column="1" x:Name="btnPeek" Content="PEEK" FontSize="10.667" BorderBrush="{x:Null}" Margin="0,3" PreviewMouseLeftButtonDown="btnPeek_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="btnPeek_PreviewMouseLeftButtonUp">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Background" Value="#00000000"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" Content="PEEK" VerticalAlignment="Center"  />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#601B205E"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Content" Value="HIDE"/>
                                                <Setter Property="Background" Value="#291B205E"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="False">
                                                <Setter Property="Content" Value="PEEK"/>
                                                <Setter Property="Background" Value="#001B205E"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Grid>
                    <Label Visibility="Collapsed" x:Name="lblPasswordInstruction" Content="Create at least 6 characters WITHOUT space" HorizontalAlignment="Right" FontSize="10.667" />
                </StackPanel>
            </StackPanel>
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <Button x:Name="btnAddStaff" Content="ADD" FontWeight="Bold" BorderBrush="{x:Null}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="3" FontSize="12" Click="btnAddStaff_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#291B205E"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,5" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#601B205E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="btnDeleteStaff" Content="CANCEL" FontWeight="Bold" BorderBrush="{x:Null}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="3" FontSize="12" Click="btnDeleteStaff_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#001B205E"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,5" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#601B205E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
